<body ng-app="tips">

 <nav class="navbar navbar-default" ng-controller="NavCtrl">
  <ul class="nav navbar-nav">
    <li ng-show="isLoggedIn()"><a> <strong id="user-id">{{ currentUser() }}</strong></a></li>
    <li ng-hide="isLoggedIn()">
     <a href="/#/register"><button class="btn btn-info" >Register</button></a>
   </li>
 </ul>
 <ul class="nav navbar-nav pull-right">
  <li ng-show="isLoggedIn()">
    <button id="logout" class="btn btn-warning" style="margin-top:7px; margin-right:10px;" ng-click="logOut()">Logout</button>
  </li>
  <li ng-hide="isLoggedIn()">
   <a href="/#/login"><button class="btn btn-success" >Login</button></a>
 </li>
</ul>
</nav>


<div class="row">


  <div class="col-md-3 col-xs-12 container-fluid" style="margin-top:20px;margin-left:20px;max-height:600px;" ng-controller="ActivityCtrl">
   <h4   ng-show="isLoggedIn()" class="text-info text-center">
    Activity log
  </h4>
  <div ng-show="isLoggedIn()" class="jumbotron pre-scrollable" style="max-height:600px;">


    <div  class="well" ng-repeat="activity in activities" >

      <span >{{activity.description}} </span>
      <span am-time-ago="activity.date"></span>

    </div>
  </div>
</div>

<div class="col-md-6 col-xs-12">  
  <ui-view></ui-view>
<div>
<span >Version: </span>
<span id="version:     ">x.y.z</span>
</div>

</div>

<div  ng-controller="NavCtrl"   ng-show="isLoggedIn()" class="col-md-2 col-xs-12" style="margin-top:20px;" >
 <div class="jumbotron">

  <h4   class="text-info text-center">
    Actions
  </h4>
  
  



  <div class="dropdown text-center">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      Actions
      <span class="caret"></span>
    </button>

    <ul class="dropdown-menu">
      <li ng-show ="validateDir()"><a href="/#/users">User administration</a></li>
      <li ng-show ="validateDir()"><a href="/#/subjects">Subjects administration</a></li>
    </ul>
  </div>

</div>

</div>


